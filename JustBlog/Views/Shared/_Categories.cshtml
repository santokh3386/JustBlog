@model IList<JustBlog.Core.Objects.Category>
@using System.Web.Mvc.Html
@using JustBlog

<div class="sidebar">
  <h3>Categories</h3>
 
  @if (Model.Count > 0)
  {
    <ul>
      @foreach (var category in Model)
      {
        <li>@Html.CategoryLink(category)</li>
      }
    </ul>
  }
  else
  {
    <p>No categories found!</p>
  }
</div>

