@model IList<JustBlog.Core.Objects.Post>
@using System.Web.Mvc.Html
@using JustBlog

<div class="sidebar">
  <h3>Latest Posts</h3>
 
  @if (Model.Count > 0)
  {
    <ul>
      @foreach (var post in Model)
      {
        <li>@Html.PostLink(post)</li>
      }
    </ul>
  }
  else
  {
    <p>No posts found!</p>
  }
</div>

