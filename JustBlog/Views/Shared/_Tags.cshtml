@model IList<JustBlog.Core.Objects.Tag>
@using System.Web.Mvc.Html
@using JustBlog
<div class="tags sidebar">
    <h3>
        Tags</h3>
    @if (Model.Count > 0)
    {
        <ul contenteditable="false" class="inline">
            @foreach (var tag in Model)
            {
                <li>@Html.TagLink(tag)</li>
            }
        </ul>
    }
    else
    {
        <p>
            No tags found!</p>
    }
</div>
