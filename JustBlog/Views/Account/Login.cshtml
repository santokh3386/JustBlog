@model JustBlog.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<div class="row-fluid">

<div class="span6" id="loginForm">

<h2>Use a local account to log in.</h2>
@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "well well-small form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Log in Form</legend>
        <div class="control-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName, new { placeholder = "User Name" })
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "help-block" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div class="controls">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "help-block" })
            </div>
        </div>

        <div class="controls">
            <label class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                Remember me?
            </label>
        </div>        

        <div class="form-actions">
            <input type="submit" value="Log in" class="btn btn-primary" />
        </div>
    </fieldset>
    <p>
        @Html.ActionLink("Register", "Register") if you don't have an account.
    </p>
}
</div>

<div class="span6 social" id="socialLoginForm">
    <h2>Use another service to log in.</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
